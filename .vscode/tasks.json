{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build_main",
            "type": "shell",
            "command": "g++",
            "args": [
                "aes.cpp",
                "-g",
                "-o",
                "aes.exe"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "run_main",
            "type": "shell",
            "command": "aes.exe",
            "dependsOn": [
                "build_main"
            ],
            "problemMatcher": []
        }
    ]
}